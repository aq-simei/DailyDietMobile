{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@assets/*": ["assets/*"],
      "@components/*": ["src/Components/*"],
      "@constants/*": ["src/Constants/*"],
      "@navigation/*": ["src/Navigation/*"],
      "@screens/*": ["src/Screens/*"],
      "@types/*": ["src/@types/*"]
    },

    "typeRoots": ["./node_modules/@types", "src/@types"]
  }
}
