{
  "expo": {
    "name": "mobile",
    "slug": "mobile",
    "version": "1.0.0",
    "web": {
      "favicon": "./assets/ForkKnife.png"
    },
    "experiments": {
      "tsconfigPaths": true
    },
    "plugins": [
      "expo-local-authentication",
      "expo-font",
      "expo-secure-store"
    ],
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSFaceIDUsageDescription": "This app uses face recognition to hold your login your account."
      },
      "bundleIdentifier": "daily.dev"
    },
    "android": {
      "permissions": [
        "USE_BIOMETRIC",
        "USE_FINGERPRINT",
        "BIOMETRIC_STRONG",
        "BIOMETRIC_WEAK"
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/ForkKnife.png",
        "backgroundColor": "#ffffff"
      }
    }
  }
}
